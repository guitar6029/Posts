<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <title>Posts</title>
</head>

<body>
    <div class="container-fluid">

        <div class="card m-1">
            <h1 class="m-4 w-25">Posts</h1>
            <a href="/posts/add"><button class="btn btn-primary m-3">New Post</button></a>
        </div>

        <% if( posts.length==0) { %>
            <h2 class="m-4">No posts yet...</h2>
            <% } else { %>
                <% posts.forEach( post=> { %>
                    <div class="card m-4 w-50">
                        <h2 class="card-title m-1 p-2">
                            <%= post.title %>
                        </h2>
                        <div class="card-body m-1">
                            <%= post.text %>
                        </div>
                        <a href="posts/<%= post.id %>"><button class="btn btn-success m-1">Show More Info</button></a>
                        <form action="posts/<%= post.id  %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger m-1">Delete</button>
                        </form>
                    </div>
                    <% }); %>

        <% } %>

    </div>
</body>

</html>